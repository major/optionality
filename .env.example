# Polygon API üîë
POLYGON_API_KEY=your_polygon_api_key_here

# Polygon S3 Flatfiles Access (for source data) üì¶
POLYGON_FLATFILES_ACCESS_KEY=your_polygon_flatfiles_access_key_here
POLYGON_FLATFILES_SECRET_KEY=your_polygon_flatfiles_secret_key_here
POLYGON_FLATFILES_ENDPOINT=https://files.polygon.io

# Data Source Configuration (for flatfiles) üìÇ
DATA_SOURCE=local  # "local" or "s3"

# S3 Bucket and Prefix Settings (for Polygon flatfiles)
STOCKS_S3_BUCKET=flatfiles
STOCKS_S3_PREFIX=us_stocks_sip/day_aggs_v1
OPTIONS_S3_BUCKET=flatfiles
OPTIONS_S3_PREFIX=us_options_opra/day_aggs_v1

# File Paths (for local data source only)
FLATFILES_PATH=./flatfiles

# Delta Lake Storage Configuration ‚òÅÔ∏è
# S3 is the default! Change to "local" only for development/testing
STORAGE_BACKEND=s3  # "s3" or "local"
STORAGE_PATH=s3://major-optionality/delta  # S3 URI or local path (e.g., ./data)

# AWS Configuration (for Delta Lake S3 storage) üîê
# NOTE: In GitHub Actions, credentials come from OIDC - leave these empty!
# Only set these for local development with explicit AWS credentials
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=  # Leave empty to use IAM role / OIDC
AWS_SECRET_ACCESS_KEY=  # Leave empty to use IAM role / OIDC
AWS_SESSION_TOKEN=  # Leave empty to use IAM role / OIDC

# Performance Settings ‚ö°
BATCH_SIZE=10000
MAX_CONCURRENT_DOWNLOADS=2  # Simultaneous downloads from Polygon
MAX_CONCURRENT_FILE_PROCESSING=2  # Simultaneous CSV file processing

# Compression Settings üóúÔ∏è
ZSTD_COMPRESSION_LEVEL=9  # 1 (fastest) to 22 (slowest, best compression)
